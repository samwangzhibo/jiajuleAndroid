<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/skyblue"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        
        android:background="@drawable/register_title_bg" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="注册"
            android:textColor="@color/black"
            android:textSize="27dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="@drawable/register_title2_bg" >

        <Button
            android:id="@+id/register_addpicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/touming"
            android:gravity="center"
            android:text="未添加图片" />

        <ImageView
            android:id="@+id/register_mypicture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/me" />

    </RelativeLayout>
 <View
    android:layout_width="match_parent"
    android:layout_height="30dp"
     />
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/register_user_icon" />

     

        <EditText
            android:id="@+id/regi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="账号"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:ems="10" />
    </LinearLayout>
 
</RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="2dp"
     />
      <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:src="@drawable/register_pass_icon2" />

        <EditText
            android:id="@+id/regi_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" 
            android:hint="密码"
            android:background="@null"
            android:ems="10" >

            <requestFocus />
        </EditText>

 </LinearLayout>

</RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="2dp"
     />
<RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:src="@drawable/register_pass_icon2" />

        <EditText
            android:id="@+id/regi_jiaID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" 
            android:hint="家庭ID"
            android:background="@null"
            android:ems="10" >

            <requestFocus />
        </EditText>

 </LinearLayout>
</RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="2dp"
     />
<RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/white" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:src="@drawable/register_pass_icon2" />

        <EditText
            android:id="@+id/regi_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" 
            android:hint="电话"
            android:background="@null"
            android:ems="10" >

            <requestFocus />
        </EditText>

 </LinearLayout>
</RelativeLayout>
<Button
        android:id="@+id/register_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/login"
        android:text="完成注册" />

</LinearLayout>